<body>
  <div class="container">
    <img src="https://upload.wikimedia.org/wikipedia/tr/8/86/Fenerbah%C3%A7e_SK.png" alt="Fenerbahçe Logosu" class="logo" />
    <h2>Final Notu Hesapla</h2>
    <input type="number" id="vize" placeholder="Vize Notu (0-100)">
    <button onclick="hesapla()">Hesapla</button>
    <div class="result" id="sonuc"></div>
    <div class="note">* Final barajı = 50</div>
  </div>

  <script>
    function hesapla() {
      const vize = parseFloat(document.getElementById('vize').value);
      const vizeYuzdesi = 0.4;
      const finalYuzdesi = 0.6;
      const gecmeNotu = 60;

      if (isNaN(vize) || vize < 0 || vize > 100) {
        document.getElementById('sonuc').textContent = "";
        return;
      }

      const gerekenFinal = (gecmeNotu - (vize * vizeYuzdesi)) / finalYuzdesi;
      const gereken = gerekenFinal < 0 ? 0 : gerekenFinal.toFixed(2);

      document.getElementById('sonuc').textContent = gereken;
    }
  </script>
